@using ClickToBuy.Model
@model Condition

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 id="hadertitle">Create Condition</h2>
<hr />

<div class="row" id="createandeditfrom">
    <div class="col-md-4">
        <form method="post" asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="control-lable"></label>
                <input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-lable"></label>
                <textarea asp-for="Description" class="form-control" placeholder="Description Box"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">@ViewBag.ErrorMessage</span>
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info"><i class="fas fa-list"></i> Back To List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $("#Name").change(function () {
                var name = $("#Name").val();
                var serverUrl = '/api/Condition/CheckName?name=' + name;

                $.ajax({
                    url: serverUrl,
                    success: function (response) {

                        if (response == 1) {
                            alert("Condition is exist! Please try new one.");
                            $('#Name').val('');
                        }
                    },
                    error: function (response) {
                        alert(response);
                    }
                });
             });
        });
    </script>
}

