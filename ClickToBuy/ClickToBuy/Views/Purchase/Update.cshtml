@using ClickToBuy.Model
@model PurchasePayment

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 id="hadertitle">Purchase Details</h2>
<hr />

<div class="row" id="createandeditfrom">
    <div class="col-md-4">
        <form method="post" asp-action="Update">
            <div class="form-group">
                <label hidden="hidden" asp-for="Id" class="control-label"></label>
                <input hidden="hidden" type="number" asp-for="Id" value="@Model.Id" class="form-control" />
                <span hidden="hidden" asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label hidden="hidden" asp-for="PurchaseId" class="control-label"></label>
                <input hidden="hidden" type="number" asp-for="PurchaseId" value="@Model.PurchaseId" class="form-control" />
                <span hidden="hidden" asp-validation-for="PurchaseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayAmount" class="control-label"></label>
                <input type="number" asp-for="PayAmount" class="form-control" />
                <span asp-validation-for="PayAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DueAmount" class="control-label"></label>
                <input type="number" asp-for="DueAmount" class="form-control" />
                <span asp-validation-for="DueAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">@ViewBag.ErrorMessage</span>
                <input type="submit" value="Update" class="btn btn-success" />
                <a asp-action="Index" asp-controller="Purchase" class="btn btn-info"><i class="fas fa-list"></i> Back To List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {

            var payAmount = parseFloat($("#PayAmount").val());
            var dueAmount = parseFloat($("#DueAmount").val());

            $("#DueAmount").change(function () {
                var addAmount = parseFloat(payAmount + dueAmount);
                $("#PayAmount").val(addAmount);
                $("#DueAmount").val(0);
            });
        });
    </script>
}

