@using ClickToBuy.Model
@model IEnumerable<Admin>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 id="hadertitle">Admin Details</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Create Admin</a>
    </div>
</div>

<div class="row" style="margin-top: 30px" id="datatables">
    <div class="col-md-10">
        <table id="myTable" class="display table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Basic Info</th>
                    <th>Address</th>
                    <th>Picture</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Admin item in Model)
                {
                    <tr>
                        <td>
                            Name : @item.Name <br />
                            Contact : @item.ContactNo <br />
                            Emial : @item.Email <br />
                        </td>
                        <td>
                            @item.Address <br />
                            <b>
                                City : @item.City.Name <br />
                                Country : @item.Country.Name
                            </b>
                        </td>
                        <td>
                            <img src="~/@item.Picture" height="80" width="90" />
                        </td>
                        <td>
                            <a asp-route-id="@item.Id" asp-action="Update" class="btn btn-info"><i class="far fa-edit"></i> Update</a>
                            <a asp-route-id="@item.Id" asp-action="Remove" class="btn btn-danger"><i class="far fa-trash-alt"></i> Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

